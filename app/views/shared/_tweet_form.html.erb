<% if current_user %>
  <%= cache "twitter-user-info-#{current_user}" do %>
    <div class="margin-bottom-50" id="status-form">
      <%= form_tag("/status", method: "post") do %>
        <div class="flow-text">
          <%= text_area_tag(:tweet, "", size: "800x80", placeholder: "Share your thoughts on breastfeeding.") %>
        </div>
        <div class="right waves-effect waves-light btn cyan lighten-2">
          <%= submit_tag "Tweet" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
